<Window x:Class="PaDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaDesktop"
        xmlns:persianDateControls="clr-namespace:Mohsen.PersianDateControls;assembly=Mohsen.PersianDateControls"

        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Top" FlowDirection="RightToLeft" MaxWidth="900">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <DockPanel Margin="30, 30, 50, 30" Grid.Column="0">
            <Label Margin="10" >تاریخ صورت وضعیت قبلی</Label>
            <persianDateControls:PersianDatePicker Grid.Column="0" ></persianDateControls:PersianDatePicker>
        </DockPanel>
        <DockPanel Margin="50, 30, 30, 30" Grid.Column="1">
            <Label Margin="10" >تاریخ صورت وضعیت فعلی</Label>
            <persianDateControls:PersianDatePicker Grid.Column="0" ></persianDateControls:PersianDatePicker>
        </DockPanel>
        <DockPanel Margin="30, 30, 50, 30" Grid.Column="0" Grid.Row="1">
            <Label Margin="10" >دوره مبنای قرارداد:</Label>
            <ComboBox ></ComboBox>
        </DockPanel>
        <DockPanel Margin="50, 30, 30, 30" Grid.Column="1" Grid.Row="1">
            <Label Margin="10" >ضریب به کار رفته در ضریب تعدیل:</Label>
            <ComboBox ></ComboBox>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="1" >
            <Button MaxWidth="100" MinHeight="40">
                مرحله بعد
                <Button.Margin>
                    <Thickness Top="100" Left="240"></Thickness>
                </Button.Margin>
            </Button>
        </DockPanel>
    </Grid>
</Window>
